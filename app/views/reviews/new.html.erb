<main class="review-main">
  <h1>Realiza tu comentario</h1>

  <div class="reservation-detail">
    <h1>Casa a calificar</h1>
    <section class="reservation-info">
      <%= link_to @home, class: 'home-link' do %>
        <%= image_tag @home.photos[0].variant(resize_to_limit: [500, 500]) %>
      <% end %>
      <div>
        <h2><%= @home.title %></h2>
        <h3>Direcci√≥n:</h3>
        <p><%= @home.address %></p>
        <h3>Ofrecido:</h3>
        <%= link_to @home.user.name, user_path(@home.user)%>
      </div>
    </section>
  </div>

  <%= render "form", review: @review %>
</main>
