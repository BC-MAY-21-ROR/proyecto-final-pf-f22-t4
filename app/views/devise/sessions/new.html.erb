<div class="devise-container devise-sign-in">
  <h2><%= t('devise.label..sign_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, t('devise.label.email') %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, t('devise.label.password') %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-me">
        <%= f.label :remember_me, t('devise.label.remember_me') %>
        <%= f.check_box :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('devise.label.sign_in'), data: {turbo: false} %>
    </div>
  <% end %>

  <div class="device-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
