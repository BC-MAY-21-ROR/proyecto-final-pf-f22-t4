<div class="devise-container devise-sign-in">
  <h2>¿Olvidaste tu contraseña?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {  "data-turbo": "false", method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Enviar instrucciones para restablecer la contraseña" %>
    </div>
  <% end %>

  <div class="device-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
