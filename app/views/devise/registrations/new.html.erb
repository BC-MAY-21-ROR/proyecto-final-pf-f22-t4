<h2><%= t('devise.form.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :profile_photo, t('devise.label.photo'), style: "display: block" %>
    <%= f.file_field :profile_photo %>
  </div>

  <div class="field">
    <%= f.label :name, t('devise.label.name') %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :birthdate, t('devise.label.birthdate') %>
    <%= f.date_field :birthdate %>
  </div>

  <div class="field">
    <%= f.label :address, t('devise.label.address') %>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :phone, t('devise.label.phone') %>
    <%= f.telephone_field :phone, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :role, t('devise.label.role') %>
    <%= f.select :role, ['guest', 'host'] %>
  </div>

  <div class="field">
    <%= f.label :email, t('devise.label.email') %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.label.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('devise.label.password_confirmation') %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.label.sign_up'), data: {turbo: false} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
