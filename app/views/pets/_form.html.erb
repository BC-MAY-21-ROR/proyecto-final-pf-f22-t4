<%= form_with(model: pet) do |form| %>
  <% if pet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
        <% pet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if action_name == 'edit' %>
    <div class="field">
      <%= image_tag(pet.photo) if pet.photo.attached? %> 
    </div>
    <div class="field">
      <%= form.label :photo, style: "display: block" %>
      <%= form.file_field :photo %>
    </div>
  <% else %>
    <div class="field">
      <%= puts "\n\n\n\n\n\n #{action_name} \n\n\n\n\n\n\n\n\n"%>
      <%= form.label :photos, style: "display: block" %>
      <%= form.file_field :photos, multiple: true %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :breed, style: "display: block" %>
    <%= form.text_field :breed %>
  </div>

  <div class="field">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
